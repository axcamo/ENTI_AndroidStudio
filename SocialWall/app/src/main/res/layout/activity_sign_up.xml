<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity"
        android:layout_gravity="center">

<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="@dimen/margin_from_top"
              android:layout_gravity="center"
              android:orientation="vertical">

    <!-- Username -->
    <TextView android:id="@+id/signUpUsernameTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:textSize="16sp"
              android:textStyle="bold"
              android:text="@string/username"/>

    <EditText android:id="@+id/signUpUsername"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:hint="@string/choose_username"/>

    <!-- Email -->
    <TextView android:id="@+id/signUpEmailTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="@dimen/margin_from_title"
              android:textSize="16sp"
              android:textStyle="bold"
              android:text="@string/email"/>

    <EditText android:id="@+id/signUpEmail"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:hint="@string/write_email"/>

    <!-- Password -->
    <TextView android:id="@+id/signPasswordTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="@dimen/margin_from_title"
              android:textSize="16sp"
              android:textStyle="bold"
              android:text="@string/password"/>

    <EditText android:id="@+id/signUpPassword"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:hint="@string/select_password"/>

    <!-- Submit -->
    <Button android:id="@+id/signUpSubmitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_from_title"
            android:layout_gravity="center"
            android:text="@string/submit"/>

<TextView android:id="@+id/logInMessage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="@string/go_to_login"/>

</LinearLayout>

</android.support.constraint.ConstraintLayout>