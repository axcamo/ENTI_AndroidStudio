<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">
    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/channel_thumbnail"
            android:layout_width=""
            android:layout_height=""/>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <EditText android:id="@+id/stream_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <EditText android:id="@+id/channel_name"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">
                    <!--icono ojo viewers-->
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>รง
                    <EditText android:id="@+id/viewers_count"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>